{
  "version": "1.0.0",
  "license": "MIT",
  "author": "artusvranken",
  "description": "A simple library to map firebase errors to human readable messages",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "repository": "https://github.com/artus/firebase-error-mapper",
  "keywords": [
    "firebase",
    "error",
    "message",
    "mapper"
  ],
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test",
    "test:coverage": "tsdx test --coverage",
    "lint": "tsdx lint",
    "prepare": "tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "name": "firebase-error-mapper",
  "module": "dist/firebase-error-mapper.esm.js",
  "size-limit": [
    {
      "path": "dist/firebase-error-mapper.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/firebase-error-mapper.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@size-limit/preset-small-lib": "^11.0.1",
    "husky": "^8.0.3",
    "size-limit": "^11.0.1",
    "tsdx": "^0.14.1",
    "tslib": "^2.6.2",
    "typescript": "^3.9.10"
  }
}
